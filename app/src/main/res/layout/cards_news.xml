<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/user_layout" />

        <TextView
            android:id="@+id/cv_news_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Название новости"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/Black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ProgressBar
                android:id="@+id/progress_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/cv_image_news"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/like"
                android:background="@drawable/like_grey"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/like_count"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:text="0"
                android:textColor="@color/Black"/>

            <ImageView
                android:id="@+id/comment"
                android:background="@drawable/comment"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:text="0"
                android:textColor="@color/Black"/>

            <ImageView
                android:id="@+id/delete"
                android:background="@drawable/delete"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="4dp"
                android:visibility="invisible"
                tool:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom"
                android:text="Подробнее..."
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="0dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/Black"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>